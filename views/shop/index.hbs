
<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
    <div id="success" class="alert alert-success" {{#if noMessage}}hidden{{/if}}>
      {{successMsg}}
    </div>
  </div>
</div>

{{# each products }}
  <div class="row">
    {{# each this}}
      <div class="col-md-4">
        <div class="thumbnail">
          <img src="{{imagePath}}" class="img-responsive">
            <div class="caption">
                <h3>{{title}}</h3>
              <p class="description"> {{description}}</p>
              <div class="clearfix">
                  <div class="price pull-left">
                      $ {{price}}
                  </div>
                  <a href="/add-to-cart/{{this._id}}" class="btn btn-outline-primary my-2 my-sm-0 pull-right" role="button">add to cart</a>
              </div>
            </div>
        </div>
      </div>

    {{/each}}    
  </div>
{{/each}}


